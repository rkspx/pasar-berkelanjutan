# Environment Configuration
FLASK_ENV=development  # Options: development, testing, production

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
PORT=5000

# Database Engine Configuration
DB_ENGINE=sqlite  # Options: sqlite, postgresql, mysql, oracle, mssql

# SQLite Configuration (used in development and testing by default)
SQLITE_PATH=sqlite:///pasar_berkelanjutan.db

# PostgreSQL Configuration (used in production by default)
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pasar_berkelanjutan

# MySQL Configuration (if DB_ENGINE=mysql)
# DB_USER=root
# DB_PASSWORD=password
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=pasar_berkelanjutan

# Other database configurations can be added as needed